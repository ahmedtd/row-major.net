{% macro breadcrumbs() %}{#- -#}
  <ul class="breadcrumbs">{#- -#}
    <li class="breadcrumbs-item">{#- -#}
      <a href="/">/root</a>{#- -#}
      {% for path in varargs %}{#- -#}
        <li class="breadcrumbs-item">{#- -#}
          <a href="{{path}}">{{path}}</a>{#- -#}
        </li>{#- -#}
      {% endfor %}{#- -#}
    </li>{#- -#}
  </ul>{#- -#}
{%- endmacro %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %} - Row-Major (Taahir Ahmed)</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block styles %}
      <style>
       {% jinjaizecss %}
       #page-header {
           height: 100px;
       }

       #page-header-logo {
           display: inline-block;
           vertical-align: middle;
           height: 100%;
       }

       #page-header-title {
           display: inline;
           font-size: 28pt;
           vertical-align: middle;
       }

       .nav {
           display: block;
           width: 100%;
           left: 0px;
       }

       .breadcrumbs {
           display: inline-block;
           padding: 0px;
           margin: 0px;
           left: 0px;
           list-style: none;
       }

       .breadcrumbs li {
           display: inline;
           padding-right: 0.5em;
       }

       .breadcrumbs li:not(:first-child):before {
           content: 'âž›';
           display: inline-block;
           padding-right: 0.5em;
       }

       body {
           max-width: 55em;
           margin: auto;
           font-family: Sans-Serif;
           font-size: 10pt;
       }

       main h1 {
           font-size: 20pt;
       }

       main h2 {
           font-size: 14pt;
       }

       main figure {
           padding: 10px;
           margin-left: 0px;
           margin-right: 0px;
           background-color: bisque;
           max-width: 100%;
       }

       main figure * {
           max-width: 100%;
       }
       {% endjinjaizecss %}
      </style>
    {% endblock %}
  </head>
  <body>

    {# There are inline-block elements in the header, so we use comments to
    control the whitespace #}
    <header id="page-header">{#- -#}
      <img src="{{ file_to_datauri('row-major-logo-optimized.svg', 'image/svg+xml') }}"
           id="page-header-logo">{#- -#}
      <h1 id="page-header-title">Row-Major</h1>{#- -#}
    </header>

    <hr>
    <nav class="nav">{% block topnav %}{% endblock %}</nav>
    <hr>

    <main>
      {% block content %}
      {% endblock %}
    </main>

    <footer>
      {% block footer %}
      <address>
        <a href="mailto:ahmed.taahir@gmail.com">Taahir Ahmed</a>
      </address>
      {% endblock %}
    </footer>

    {% block scripts %}
    {% endblock %}
  </body>
</html>
